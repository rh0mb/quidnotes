<div class="container">
  <h1>Listings</h1>

  <table>
    <tr>
      <th>Poster</th>
      <th>University</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
    </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td><%= listing.user.user_name %></td>
      <td><%= listing.user.university.name %></td>
      <td><%= listing.name %></td>
      <td><%= listing.description %></td>
      <td><%= listing.format_price %></td>
      <td><%= link_to 'Show', listing %></td>
      <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
      <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Listing', new_listing_path %>
</div>
